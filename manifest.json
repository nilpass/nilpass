{
  "manifest_version": 2,
  "name": "NilPass",
  "version": "0.1.0",
  "icons": { "48": "icon/48px.png",
            "128": "icon/108px+20px-margin.png" },
  "description": "The only password manager that's truly impenetrable",
  "browser_action": {
    "default_title": "NilPass",
    "default_popup": "popup.html"
  },
  "author": "Stuart P. Bentley",
  "background": {
    "scripts": [
      "lib/transientPasswordStore.js",
      "scripts/background.js"],
    "persistent": false
  },
  "homepage_url": "https://nilpass.com/",
  "permissions": [
    "activeTab"
  ]
}
